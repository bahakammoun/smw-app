<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pavelnefedov.smwquiz.ChooseYourWikiActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="eigenes Wiki hier eintragen"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:id="@+id/Wikieingabe"
        android:singleLine="true"
        android:selectAllOnFocus="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:textSize="30sp" />

    <GridLayout
        android:layout_width="800dp"
        android:layout_height="900dp"
        android:id="@+id/WikiAuswahl"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Sportarten"
            android:id="@+id/wiki1"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_row="0"
            android:layout_column="0"
            style="@style/Widget.AppCompat.Button.Colored"
            android:elevation="0dp"
            android:visibility="visible" />

        <Button
            android:text="Platzhalter"
            android:id="@+id/wiki3"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_row="1"
            android:layout_column="0"
            style="@style/Widget.AppCompat.Button.Colored"
            android:visibility="visible"/>

        <Button
            android:text="Platzhalter"
            android:id="@+id/wiki5"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_row="2"
            android:layout_column="0"
            style="@style/Widget.AppCompat.Button.Colored"
            android:visibility="visible"/>

        <Button
            android:text="Platzhalter"
            android:id="@+id/wiki7"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_row="3"
            android:layout_column="0"
            style="@style/Widget.AppCompat.Button.Colored"
            android:visibility="visible"/>

        <Button
            android:text="Olympia Wiki"
            android:id="@+id/wiki2"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_row="0"
            android:layout_column="2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:visibility="visible" />

        <Button
            android:text="Platzhalter"
            android:id="@+id/wiki4"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_row="1"
            android:layout_column="2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:visibility="visible"/>

        <Button
            android:text="Platzhalter"
            android:id="@+id/wiki6"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_row="2"
            android:layout_column="2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:visibility="visible"/>

        <Button
            android:text="Platzhalter"
            android:id="@+id/wiki8"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_row="3"
            android:layout_column="2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:visibility="visible" />

    </GridLayout>



</RelativeLayout>
